{
  "compilerOptions": {
    "jsx": "react",
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  }, 
  "include": ["src/**/*"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ],
  "exclude": ["vite.config.ts"]
}