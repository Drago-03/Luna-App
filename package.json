{
  "$schema": "https://json.schemastore.org/package.json",
  "name": "luna-ai-assistant",
  "private": true,
  "version": "1.0.0",
  "main": "dist-electron/main.js",
  "type": "module",
  "scripts": {
      "start": "npm run dev",
      "dev": "concurrently \"vite\" \"npm run electron:dev\"",
      "build": "tsc && vite build && tsc -p electron/tsconfig.electron.json",
      "build-electron": "tsc -p electron/tsconfig.electron.json",
      "launch": "electron .",
      "electron:dev": "wait-on tcp:5173 && electron .",
    "package": "electron-builder build"
  },
  "dependencies": {
    "@vitalets/google-translate-api": "^9.2.0",
    "@xenova/transformers": "^2.17.2",
    "comlink": "^4.4.1",
    "cors": "^2.8.5",
    "dexie": "^3.2.4",
    "dotenv": "^16.4.7",
    "electron-store": "^8.1.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "franc": "^6.2.0",
    "lucide-react": "^0.344.0",
    "node-fetch": "^3.3.2",
    "onnxruntime-web": "^1.17.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "winston": "^3.11.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@types/json-schema": "^7.0.15",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "^8.2.2",
    "electron": "^29.1.0",
    "electron-builder": "^24.9.1",
    "electron-updater": "^6.3.9",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-electron": "^0.28.2",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.luna.assistant",
    "productName": "Luna AI Assistant",
    "description": "AI Assistant with multilingual support", 
    "author": {                                             
      "name": "Drago",
      "email": "hitmanagent404@gmail.com"
    },
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "Drago-03",
        "repo": "Luna-App"
      }
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png",
      "category": "Utility"
    }
  }
}
